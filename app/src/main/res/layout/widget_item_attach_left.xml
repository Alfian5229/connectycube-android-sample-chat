<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent">

    <LinearLayout style="@style/LinearAttachWidgetFrame.Left">

        <TextView
            android:id="@+id/opponent_name_attach_view"
            style="@style/MessageAuthorStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="Opponent Name" />

        <TextView
            android:id="@+id/msg_text_time_attach"
            style="@style/TextViewAttach.Left"
            tools:text="time" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/refresh_attach_view"
        style="@style/RefreshImageButtonStyle.Left" />

</FrameLayout>